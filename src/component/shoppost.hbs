<div class='card text-bg-dark'>
  <div class='card-header'>
    {{title}}{{#if isTop}}
      <span
        class='badge text-bg-danger rounded-pill'
      >Top</span>
    {{/if}}
    {{#if idNew}}
      <span
        class='badge text-bg-success rounded-pill'
      >New</span>
    {{/if}}
  </div>
  <div class='card-body'>
    <p class='card-text'>{{description}}</p>
  </div>
</div>