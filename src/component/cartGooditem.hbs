<div class='card mb-4'>
  <div class='card-body'>
    <div class='row'>
      <div class='col-2'>
        <img src='{{image}}' class='card-img' />
      </div>
      <div class='col-4'>
        <h5 class='card-title'>{{name}}</h5>
        <p class='card-text'>{{description}}</p>
      </div>
      <div class='col-2'>
        <div class='card-body'>
          {{#with price}}
            <div>{{title}}:</div>
            <div>{{value}}</div>
          {{/with}}
        </div>
      </div>
      <div class='col-2'>
        <div class='card-body'>
          {{amount}}
        </div>
      </div>
      <div class='col-2'>
        <div class='card-body'>
          {{#each buttons}}
            {{#if isPrimary}}
              <button
                type='button'
                class='btn btn-primary mb-3'
              >{{text}}</button>
            {{/if}}
            {{#if isDanger}}
              <button
                type='button'
                class='btn btn-outline-danger'
              >{{text}}</button>
            {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>