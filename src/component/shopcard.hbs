<div class='card'>
  <img src='{{image}}' class='card-img-top' />
  <div class='card-body'>
    <h5 class='card-title'>{{title}}{{#if isHot}}
        <span
          class='badge text-bg-warning text-uppercase text-light rounded-pill'
        >Hot!</span>
      {{/if}}
      {{#if isNew}}
        <span
          class='badge text-bg-primary rounded-pill'
        >New</span>
      {{/if}}
    </h5>
    <p class='card-text'>{{description}}</p>
  </div>
</div>