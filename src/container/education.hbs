{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
        <main>
            <section>
                {{> title data="My education" big=true}}                
                <ul>
                    {{#each educations}}                   
                        <li>                            
                            {{name}}
                            {{#unless isEnd}} 
                                (while in progress)
                            {{/unless}}
                        </li>
                    {{/each}}
                </ul>
            </section>

            <section>
                {{> title data="My certificates"}}
                    <ul>
                        {{#each certificates}}
                            <li>
                                {{name}}
                                {{#if id includeZero=true}} (Id {{id}}) {{/if}}
                                {{#unless id includeZero=true}} (not yet received) {{/unless}}                                                       
                            </li>
                        {{/each}}
                    </ul>
            </section>
        </main>
    {{/with}}
</div>

