<main>
  {{> shopheader}}
  <div class="mb-5"><h1>{{header}}</h1></div>
  <div class="row">
    <div class="col-8">
      <div class="card-body">
        {{#with contacts_data}}
            <h2 class="mb-3">{{title}}</h2>
              {{#each buttons}}
                {{#if isPrimary}}
                  <button type="button" class="btn btn-warning text-light btn-lg me-2">{{text}}</button>
                {{/if}}
                {{#if isOutline}}
                  <button type="button" class="btn btn-outline-warning btn-lg">{{text}}</button>
                {{/if}}
              {{/each}}
            {{#with form}}
              {{#with input}}
                <div class="row">
                  <div class="col-6">
                    {{#with surname}}
                      <label class="form-label mt-3">{{label}}</label>
                      <input class="form-control" placeholder="{{placeholder}}">
                      <div class="form-text">
                        {{caption}}
                      </div>
                    {{/with}}
                  </div>
                  <div class="col-6">
                    {{#with name}}
                      <label class="form-label mt-3">{{label}}</label>
                      <input class="form-control" placeholder="{{placeholder}}">
                      <div class="form-text">
                        {{caption}}
                      </div>
                    {{/with}}
                  </div>
                </div>
                <div class="row">
                  <div class="col-6">
                    {{#with phone}}
                      <label class="form-label mt-3">{{label}}</label>
                      <input class="form-control" placeholder="{{placeholder}}">
                      <div class="form-text">
                        {{caption}}
                      </div>
                    {{/with}}
                  </div>
                  <div class="col-6">
                    {{#with email}}
                      <label class="form-label mt-3">{{label}}</label>
                      <input class="form-control" placeholder="{{placeholder}}">
                      <div class="form-text">
                        {{caption}}
                      </div>
                    {{/with}}
                  </div>
                </div>
                <hr class="mt-4">
              {{/with}}
              {{#each switch}}
                <div class="form-check form-switch my-3">
                  {{#unless isActive}}
                    <input class="form-check-input" type="checkbox" role="switch">
                    <label class="form-check-label">{{text}}</label>
                  {{/unless}}
                  {{#if isActive}}
                    <input class="form-check-input" type="checkbox" role="switch">
                    <label class="form-check-label">{{text}}</label>
                  {{/if}}
                </div>            
              {{/each}}
              <hr class="mt-3">
            {{/with}}
        {{/with}}
      </div>
      <div class="mt-4">
        {{#with delivery}}
          <h3>{{title}}</h3>
          <div class="card mt-3">
            <div class="card-body">
              <div class="row">
                {{#each select}}
                    <div class="col-6">
                      <label class="form-label">
                        {{label}}
                      </label>
                      <select class="form-select">
                      <option selected>{{placeholder}}</option>
                        {{#each options}}
                          <option value="{{value}}">{{text}}</option>
                        {{/each}}
                      </select>
                    </div>  
                {{/each}}
              </div>  
            </div>
          </div>
          <div class="mt-3">
            {{#each delivery_type}}
              <div class="form-check mt-2">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label">
                  {{type}}
                </label>
              </div> 
            {{/each}}
          </div>
          <hr class="mt-4">
          <div class="mt-4">
            {{#with payment}}
              <div class="mb-3"><h3>{{title}}</h3></div>
              {{#each list}}
                <div class="form-check mt-2">
                  <input class="form-check-input" type="radio" name="flexRadioDefault">
                  <label class="form-check-label">
                    {{type}}
                  </label>
                  <div class="form-text">
                    {{description}}
                  </div>
                </div>
              {{/each}}
            {{/with}}
          </div>
          <hr class="mt-4">
          <div class="mt-4">
            {{#with contact}}
              <div class="mb-3"><h3>{{title}}</h3></div>
              <div class="row">
                <div class="col-6">
                  {{#with surname}}
                      <label class="form-label mt-3">{{label}}</label>
                      <input class="form-control" placeholder="{{placeholder}}">
                      <div class="form-text">
                        {{caption}}
                      </div>
                  {{/with}}
                </div>
                <div class="col-6">
                  {{#with name}}
                      <label class="form-label mt-3">{{label}}</label>
                      <input class="form-control" placeholder="{{placeholder}}">
                      <div class="form-text">
                        {{caption}}
                      </div>
                  {{/with}}
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  {{#with phone}}
                      <label class="form-label mt-3">{{label}}</label>
                      <input class="form-control" placeholder="{{placeholder}}">
                      <div class="form-text">
                        {{caption}}
                      </div>
                  {{/with}}
                </div>
                <div class="col-6">
                  {{#with email}}
                      <label class="form-label mt-3">{{label}}</label>
                      <input class="form-control" placeholder="{{placeholder}}">
                      <div class="form-text">
                        {{caption}}
                      </div>
                  {{/with}}
                </div>
              </div>
            {{/with}}
          </div>
          <hr class="my-4">
          {{#with coment}}
            <div class="label form-label">
              {{label}}
              <input class="form-control" type="text" placeholder="{{placeholder}}">
            </div>
          {{/with}}
          <hr class="mt-5 mb-4">
        {{/with}}
      </div>
      <div>
        {{#with coupon}}
          <div class="mb-3"><h3>{{title}}</h3></div>
          {{#with select}}
            {{#with availabel_coupon}}
              <label class="form-label">
                {{label}}
              </label>
              <select class="form-select form-select-lg mb-3">
                <option selected>{{placeholder}}</option>
                  {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                  {{/each}}
              </select>
            {{/with}}
            {{#with friend_coupon}}
              <label class="form-label">
                {{label}}
              </label>
              <select class="form-select">
                <option selected>{{placeholder}}</option>
                  {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                  {{/each}}
              </select>
            {{/with}}
          {{/with}}
          {{#with add}}
            {{#with friend}}
              <label class="form-label mt-3">{{label}}</label>
              <input class="form-control form-control-lg" type="text" placeholder="{{placeholder}}">
              <div class="form-text">
                {{caption}}
              </div>
            {{/with}}
            {{#with colleague}}
              <label class="form-label mt-3">{{label}}</label>
              <input class="form-control" type="text" placeholder="{{placeholder}}">
              <div class="form-text">
                {{caption}}
              </div>
            {{/with}}
          {{/with}}
        {{/with}}
      </div>
      <hr class="mt-4 mb-5">
      <div>
        {{#with quiz}}
          <div class="mb-3"><h3>{{title}}</h3></div>
          {{#with preference}}
            <div>{{title}}</div>
            {{#each options}}
              <div class="form-check mt-2">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label">
                  {{this}}
                </label>
              </div>
            {{/each}}
          {{/with}}
          <div class="mt-3">
            {{#with your_expirience}}
              <label class="form-label">{{label}}</label>
              <input class="form-control">
            {{/with}}
          </div>
          <div class="mt-3">
            {{#with purchase_frequency}}
              <label class="form-label">
                {{label}}
              </label>
              <select class="form-select">
                <option selected>{{placeholder}}</option>
                  {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                  {{/each}}
              </select>
            {{/with}}
          </div>
          <div class="mt-3">
            {{#with factors}}
              <div class="mb-2">{{title}}</div>
              {{#each options}}
                <div class="form-check">
                  <input class="form-check-input" type="checkbox">
                  <label class="form-check-label">
                    {{this}}
                  </label>
                </div>
              {{/each}}
            {{/with}}
          </div>
        {{/with}}
      </div>
    </div>
    <div class="col-4">
      <div class="card p-3">
          {{#each action_block}}
            {{#if isSuccess}}
              <button type="button" class="btn btn-success btn-lg mb-2">{{text}}</button>
            {{/if}}
            {{#if isDanger}}
              <button type="button" class="btn btn-danger btn-lg mb-2">{{text}}</button>
            {{/if}}
            {{#if isInfo}}
              <button type="button" class="btn btn-info btn-lg text-light">{{text}}</button>
            {{/if}}
          {{/each}}
      </div>
      <div class="card mt-3">
        <div class="card-body">
          {{#with total}}
            <div> 
              <h3>{{title}}</h3>
                {{#each item_list}}
                  <div>{{name}}: {{price}}</div>
                {{/each}}
            </div>
            <hr>
            <div>
              {{#each additional_info}}
                <div>{{text}}: {{value}}</div>
              {{/each}}
            </div>
            <hr>
            <div>
              {{#with total_price}}
                <div>{{text}}: {{value}}</div>
              {{/with}}
            </div>
            <hr>
            {{#each button}}
              {{#if isPrimary}}
                <button type="button" class="btn btn-primary mb-2">{{text}}</button>
              {{/if}}
              {{#if isOutline}}
                <button type="button" class="btn btn-outline-primary">{{text}}</button>
              {{/if}}
            {{/each}}
          {{/with}}          
        </div>
      </div>
    </div>
  </div>
  <br>
  <hr>
  {{> shopfooter}}
</main>