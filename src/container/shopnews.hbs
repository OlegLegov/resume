<main>
    {{> shopheader}}
    {{> breadcrumb}}
    <div class='row'>
      {{#with newsData}}
        <div class='card px-0 mt-2 mb-4'>
            <img src='{{photo}}' class='card-img-top' />
        </div>
        <div>
          {{#with head}}
            <h1>{{heading}}</h1>
            <p class="mt-3">{{description}}</p>
          {{/with}}
        </div>
        <div>
          {{#each body}}
            <h2>{{title}}</h2>
            <p class="mt-3">{{text}}</p>
          {{/each}}
        </div>
      {{/with}}
    </div>
    <br>
    <br>
    <hr>
    <div class='mt-5 mb-3'>
      {{#with newsOtherBlock}}
        <div class='mb-4'><h2 class='text-center'>{{title}}
          </h2>
        </div>
        <div class='row gx-3'>
          {{#each cards}}
            <div class='col-3'>
              {{> shoppost}}
            </div>
          {{/each}}
        </div>
      {{/with}}
    </div>
    <br>
    <hr>
    <div>
      {{> shopaction}}
    </div>
    <hr>
    {{> shopfooter}}
</main>