<main>
    {{> breadcrumb}}
    <div class="row">
        <h1>{{header}}</h1>
        <section class="col-9 mt-3 mb-4">
            <div class="row">
                {{#each sortBlock}}
                    <div class="col-4">
                        <select class="form-select">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                {{/each}}
            </div>
        </section>
        <div class="row">
            {{#with filterBlock}}
                <section class="col-4">
                    <div class="card">
                        <div class="card-body">
                            {{#with sellers}}
                                <div class="mb-3">{{title}}</div>
                                    {{#each list}}
                                        <div class='form-check'>
                                            <input
                                                class='form-check-input'
                                                type='checkbox'
                                            />
                                            <label class='form-check-label' for="flexCheckDefault">
                                                {{value}}
                                            </label>
                                        </div>
                                    {{/each}}
                                    <hr>
                            {{/with}}
                            {{#with brands}}
                                <div class="mb-3">{{title}}</div>
                                {{#with input}}
                                    <input class="form-control mb-3" placeholder="{{placeholder}}">
                                {{/with}}
                                {{#each options}}
                                    <div class='form-check'>
                                        <input
                                            class='form-check-input'
                                            type='checkbox'
                                        />
                                        <label class='form-check-label' for="flexCheckDefault">
                                            {{value}}
                                        </label>
                                    </div>
                                {{/each}}
                            {{/with}}
                            <hr>
                            {{#with price}}
                                <div class="mb-3">{{title}}</div>
                                {{#with range}}
                                    <input class="form-control mb-3" placeholder="{{from}}">
                                    <input class="form-control mb-3" placeholder="{{to}}">   
                                {{/with}}
                                {{#with button}}
                                    <a class="btn btn-outline-secondary" href="#" role="button">{{text}}</a>
                                {{/with}}
                            {{/with}}
                            <hr>
                            {{#each filterList}}
                                <div class="mb-3">
                                    {{title}}
                                </div>
                                    {{#each options}}
                                        <div class='form-check'>
                                            <input
                                                class='form-check-input'
                                                type='checkbox'
                                            />
                                            <label class='form-check-label' for="flexCheckDefault">
                                                {{value}}
                                            </label>
                                        </div>
                                    {{/each}}
                                {{#unless @last}}<hr>{{/unless}}
                            {{/each}}
                        </div>
                    </div>
                </section>
            {{/with}}
            <section class="col-8">
                <div class="row gy-3">
                    {{#each goodsList}}
                        <div class="col-6">
                            {{> catalogltem}}
                        </div>
                    {{/each}}
                </div>
            </section>
        </div>
    </div>
    {{#with service}}
        {{> shopaction}}
    {{/with}}
    <hr>
</main>