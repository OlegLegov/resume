<main>
  <div>
    <h1>{{header}}</h1>
  </div>
  <div>
    {{#with purchase}}
      <ul class='nav nav-tabs mt-4'>
      {{#each tabs}}
        <li class='nav-item'>
          <a {{#if @first}}
            class='nav-link active'
            aria-current='page' {{/if}}
            {{#if @last}} class='nav-link'{{/if}} 
            href='#'
            >{{this}}
          </a>
        </li>
      {{/each}}
      </ul>
      <form class="row gx-3 my-4">
        {{#with actionBlock}}
          <div class="col-auto">
            {{#with input}}
              <input class="form-control" placeholder="{{placeholder}}">
            {{/with}}
          </div>
          {{#each buttons}}
          <div class="col-auto">
            {{#if isSuccess}}
              <a class="btn btn-success" href="{{link}}" role="button">{{text}}</a>
            {{/if}}
            {{#if isOutline}}
              <a class="btn btn-outline-success" href="{{link}}" role="button">{{text}}</a>
            {{/if}}
            {{#if isDanger}}
              <a class="btn btn-outline-danger" href="{{link}}" role="button">{{text}}</a>
            {{/if}}
          </div>
          {{/each}}
        {{/with}}
      </form>
      <hr>
      <div>
        {{#each itemList}}
          {{> purchaseltem}}
          <hr>
        {{/each}}
      </div>
    {{/with}}
  </div>
  <br>
  <hr>
  <br>
  <div>
    {{#with userInfo}}
      <div class="mb-5">
        <h2>{{title}}</h2>
      </div>
      <div class="card">
        {{#with profileData}}
          <div class="card-body">
            <h3 class="card-title">{{title}}</h3>
            <div class="card mt-4">
              <div class="card-body">
                <div class="row">
                  {{#with fullName}}
                    <div class="col-4">
                      {{#with surname}}
                        <div class="mb-2">{{title}}</div> 
                        <div><b>{{value}}</b></div> 
                      {{/with}}
                    </div>
                    <div class="col-4">
                      {{#with name}}
                        <div class="mb-2">{{title}}</div> 
                        <div><b>{{value}}</b></div> 
                      {{/with}}
                    </div>
                    <div class="col-4">
                      {{#with middleName}}
                        <div class="mb-2">{{title}}</div> 
                        <div><b>{{value}}</b></div> 
                      {{/with}}
                    </div>
                  {{/with}}
                </div>
              </div>
            </div>
            <div class="card mt-4">
              <div class="card-body">
                <div class="row">
                  {{#with otherInfo}}
                    <div class="col-4">
                      {{#with birthday}}
                        <div class="mb-2">{{title}}</div> 
                        <div><b>{{value}}</b></div> 
                      {{/with}}
                    </div>
                    <div class="col-4">
                      {{#with sex}}
                        <div class="mb-2">{{title}}</div> 
                        <div><b>{{value}}</b></div> 
                      {{/with}}
                    </div>
                    <div class="col-4">
                      {{#with language}}
                        <div class="mb-2">{{title}}</div> 
                        <div><b>{{value}}</b></div> 
                      {{/with}}
                    </div>
                  {{/with}}
                </div>
              </div>
            </div>
          </div>
        {{/with}}
      </div>
      <div class="card mt-2">
        <div class="card-body">
          <div class="row">
            {{#each buttons}}
              <div class="col-4">
                {{#if isPrimary}}
                  <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
                {{/if}}
                {{#if isSecondary}}
                  <a class="btn btn-outline-secondary" href="{{link}}" role="button">{{text}}</a>
                {{/if}}
                {{#if isDanger}}
                  <a class="btn btn-outline-danger" href="{{link}}" role="button">{{text}}</a>
                {{/if}}
              </div>  
            {{/each}}
          </div>
        </div>
      </div>
      <div class="card mt-2">
        <div class="card-body">
          {{#with recipients}}
            <h3 class="card-title mb-4">{{title}}</h3>
            <div class="row">
              {{#each users}}
                <div class="col-4">
                  <div class="card">
                    <div class="card-body">
                      <div class="card-text">{{name}}</div>
                      <p class="card-text">{{phone}}</p>
                      {{#with button}}
                        <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
                      {{/with}}
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          {{/with}}
        </div>
      </div>
      <div class="card mt-2">
        <div class="card-body">
          {{#with contacts}}
            <h3 class="card-title mb-4">{{title}}</h3>
            <div class="row">
                {{#each contactData}}
                  <div class="col-4">
                    <div class="card">
                      <div class="card-body">
                        <div class="card-text">{{title}}</div>
                        <p class="card-text">{{value}}</p>
                        {{#with button}}
                          {{#if isPrimary}}
                            <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
                          {{/if}}
                          {{#if isSecondary}}
                            <a class="btn btn-outline-secondary" href="{{link}}" role="button">{{text}}</a>
                          {{/if}}
                          {{#if isDanger}}
                            <a class="btn btn-outline-danger" href="{{link}}" role="button">{{text}}</a>
                          {{/if}}
                        {{/with}}
                      </div>
                    </div>
                  </div>
                {{/each}}
            </div>
          {{/with}}  
        </div>
      </div>    
    {{/with}}
  </div>
  <br>
  <hr>
</main>